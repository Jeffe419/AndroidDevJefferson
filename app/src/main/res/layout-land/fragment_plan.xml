<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txtSearch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:text="@string/please_enter_date_to_find_incidents_roadworks_planned_roadworks"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnEndDate"
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/txtSearch1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="62dp"
        android:text="@string/select_end"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnStartDate"
        android:layout_width="198dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/btnEndDate"
        android:text="@string/select_start"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSearch1"
        android:layout_width="162dp"
        android:layout_height="67dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="51dp"
        android:text="@string/search"
        android:textColor="#7B1FA2" />

    <ListView
        android:id="@+id/itemlist1"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_below="@+id/btnStartDate"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="0dp" />


</RelativeLayout>